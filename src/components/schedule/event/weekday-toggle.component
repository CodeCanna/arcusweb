<can-component tag="arcus-schedule-edit-panel-weekday-toggle">
  <template>
    <button class="btn{{#if selected}} active{{/if}}" ($click)="toggleWeekday(%event)">{{dayFormatted}}</button>
  </template>
  <script type="view-model">
    import canMap from 'can-map';
    import 'can-map-define';

    export default canMap.extend({
      define: {
        days: {},
        day: {},
        dayFormatted: {
          get() {
            return this.attr('day').charAt(0);
          },
        },
        dayIndex: {
          get() {
            return this.attr('days') && this.attr('days').indexOf(this.attr('day'));
          },
        },
        propagateSelection: {
          type: 'htmlbool',
          value: false,
        },
        selected: {
          get() {
            return (this.attr('dayIndex') !== -1);
          },
        },
      },
      toggleWeekday(ev) {
        ev.preventDefault();
        if (!this.attr('propagateSelection')) {
          ev.stopPropagation();
        }
        if (this.attr('selected')) {
          this.attr('days').splice(this.attr('dayIndex'), 1);
        } else {
          this.attr('days').push(this.attr('day'));
        }
      },
    });
  </script>
</can-component>
